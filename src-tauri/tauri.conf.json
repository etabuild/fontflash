{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "python run_on_build.py 0.0.2",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "fontflash",
    "version": "0.1.1"
  },
  "tauri": {
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "allowlist": {
      "fs": {
        "scope": ["$RESOURCE/*"]
      },
      "all": true,
      "protocol": {
        "asset": true,
        "assetScope": [
          "**"
        ]
      },
      "shell": {
        "scope": [
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "resources": [
        "../src/data/version.json"
      ],
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "eta.fontflash.tauri",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "decorations": false,
        "transparent": true,
        "fullscreen": false,

        "height": 600,
        "resizable": true,
        "title": "fontflash",
        "width": 800,
        "minWidth": 600,
        "minHeight": 550
      }
    ]
  }
}
